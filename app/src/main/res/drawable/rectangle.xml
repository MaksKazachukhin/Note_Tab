<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State for when the button is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF8C00" /> <!-- Darker orange for pressed state -->
            <corners android:radius="16dp" />
            <size
                android:width="200dp"
                android:height="50dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFA500" /> <!-- Orange color for normal state -->
            <corners android:radius="16dp" />
            <size
                android:width="200dp"
                android:height="50dp" />
        </shape>
    </item>
</selector>
